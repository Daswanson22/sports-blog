<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascripts/clickable.js"></script>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>

    <div id="container">
      <h1>Recent Posts</h1>
        <div id="recentPosts">
            <% articles.forEach(article => { %>
              <div id="article_box">
                <h2><%= article.title %></h2>
                <h3><%= article.updatedAt.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></h3>
                <p><%= article.meta_summary %></p>
              </div>
            <% }) %>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
